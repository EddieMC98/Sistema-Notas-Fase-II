@model SistemaNotas1.Models.Usuarios.AgregarClase;
@{
    ViewBag.Title = "Agregar Clase";
}
<head>
    @if (ViewBag.showSuccessAlert)
    {
        <script>
            alert('Ya existe un registro similar');
        </script>
    }
</head>

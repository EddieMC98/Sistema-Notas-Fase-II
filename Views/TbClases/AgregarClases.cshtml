<div class="container" style="width:400px">
    <h2 align="center">REGISTRO DE CLASES</h2>
    <form action="/TbClases/AgregarClases" enctype="multipart/form-data" method="post">

        @Html.ValidationSummary()

        <div class="form-group">
            Docente:
            @Html.DropDownListFor(model => model.CodDocente, new SelectList(Model.ListaDocente, "Value", "Text"), new { @class = "form-control" })
        </div>
        <div class="form-group">
            Curso:
            @Html.DropDownListFor(model => model.CodCurso, new SelectList(Model.ListaCurso, "Value", "Text"), new { @class = "form-control" })
        </div>
        <div class="form-group">
            Seccion:
            @Html.DropDownListFor(model => model.CodSeccion, new SelectList(Model.ListaSeccion, "Value", "Text"), new { @class = "form-control" })
        </div>
        <div class="form-group">
            Jornada:
            @Html.DropDownListFor(model => model.CodJornada, new SelectList(Model.ListaJornada, "Value", "Text"), new { @class = "form-control" })
        </div>
        <div class="form-group">
            Unidad:
            @Html.DropDownListFor(model => model.CodUnidad, new SelectList(Model.ListaUnidad, "Value", "Text"), new { @class = "form-control" })
        </div>
        <div class="form-group">
            Año:
            @Html.DropDownListFor(model => model.CodAño, new SelectList(Model.ListaAño, "Value", "Text"), new { @class = "form-control" })
        </div>
        @*@foreach (TbGrado item in Model.ListaGrados)
                {
            <div class="form-group">
                Categoria:
                <span>@item.Nombre.ToString()</span>
            </div>

                }*@

        <div align="right"><input type="submit" class="btn btn-primary" name="Registrar" value="Registrar" /></div>

    </form>

</div>
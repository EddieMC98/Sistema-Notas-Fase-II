                alert('La actividad sobrepasa el máximo punteo posible');
                </script>
            }*@
    </head>
    <h1>Crear Actividad</h1>

    <h4>Actividad</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CrearActividad">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <input asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Punteo" class="control-label"></label>
                    <input asp-for="Punteo" class="form-control" />
                    <span asp-validation-for="Punteo" class="text-danger"></span>

                </div>
                <div class="form-group" hidden="hidden">
                    <label asp-for="CodClase" class="control-label"></label>
                    <input asp-for="CodClase" class="form-control" value=@ViewData["nombre1"] />
                    <span asp-validation-for="CodClase" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-dark" asp-action="AgregarActividad">Regresar a Lista</a>
    </div>
</div>

@model SistemaNotas1.Models.Usuarios.AgregarCurso;
@{
    ViewBag.Title = "Agregar Curso";
}
<head>
    @if (ViewBag.showSuccessAlert)
    {
        <script>
            alert('¡HA OCURRIDO UN ERROR!');
        </script>
    }
</head>
<br />
<br />
<br />
<br />
<br />
<br />
<br />

<div class="container" style="width:400px">
    <h2 align="center">REGISTRO DE CURSOS</h2>
    <form action="/TbCursoes/AgregarCursos" enctype="multipart/form-data" method="post">

        @Html.ValidationSummary()
        <div class="form-group">
            <input type="text" class="form-control" name="Nombre" placeholder="Ingrese su nombre" required />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="Descripcion" placeholder="Descripción: " required />
        </div>
        <div class="form-group">
            Grado:
            @Html.DropDownListFor(model => model.CodGrado, new SelectList(Model.ListaGrados, "Value", "Text"), new { @class = "form-control" })
        </div>
        <div align="right"><input type="submit" class="btn btn-success" name="Registrar" value="Registrar" /></div>

    </form>
    

</div>
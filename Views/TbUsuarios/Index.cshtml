@model IEnumerable<SistemaNotas1.Models.TbUsuario>

@{
    ViewData["Title"] = "Index";
}
<br />
<br />
<br />
<br />
<br />
<div class="container">
    <h2 align="center">Lista de Productos</h2>

    <p align="right">
        <a href="@Url.Action("Registro","TbUsuarios")" class="btn btn-primary">Agregar Usuario</a>
    </p>
    <table class="table table-active">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Usuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contraseña)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CodRol)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contraseña)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodRol)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CodUsuario">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.CodUsuario">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.CodUsuario">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>